{% extends 'base.jinja2' %}

{% block content %}
    <h2>Уязвимое веб-приложение</h2>
    <p>последний вход: {{ last_visited }}</p>

    <a href="/students/">Студенты</a><br/>
    <a href="/courses/">Курсы</a><br/>
{% endblock %}

{% block aside %}
    {% if not auth_user %}
        <div class="row">
            <form class="col s12" method="POST">
                <div class="card">
                    {% if errors %}
                        <div class="row">
                            <div class="toast" style="top: 0;">
                                {% for error in errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    <div class="card-content">
                        <span class="card-title">Войти</span>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token() }}">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="username" name="username" type="text" class="validate">
                                <label for="username">Имя пользователя</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" name="password" type="password" class="validate">
                                <label for="password">Пароль</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn pink waves-effect waves-light" type="submit">
                            Войти
                            <i class="material-icons right"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}
